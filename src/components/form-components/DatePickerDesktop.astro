---
import { 
  searchFormPickersDimensions as pickerDimensions, 
  generateCSSConstants } from "../../styles/constants";

const { containerName } = Astro.props
const today = new Date()
const thisMonth = new Date(today.getFullYear(), today.getUTCMonth())
---
<div class="date-picker" style={generateCSSConstants(pickerDimensions, "px")}>
  <h2>{`Seleziona la data di ${containerName.toLowerCase()}`}</h2>
  <div class="calendar">
    <p>{today.toDateString()}</p>
    <p>{today.getDay().toString()}</p>
    <p>{today.getMonth().toString()}</p>
    <p>{today.getUTCDate()}</p>
    <p>{today.getUTCDay()}</p>
    <p>{today.getUTCMonth()}</p>
    <p>{thisMonth}</p>
  </div>
</div>

<style>
  div.date-picker {
    position: absolute;
    background-color: #FFFFFF;
    box-shadow: 2px 2px 10px 5px var(--grayhovercolor);
    margin-top: 12px;
    left: calc((100vw - var(--formW)) / 2);
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: var(--pickerBorderRadius);
    padding: 32px 24px 32px 24px;
    width: var(--formW);
  }

  @media screen and (max-width: 850px) {
    div.date-picker {
      width: var(--formTabletW);
      left: calc((100vw - var(--formTabletW)) / 2);
    }
  }
</style>